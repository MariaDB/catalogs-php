{
    "name": "mariadb/catalogs-php",
    "description": "Communicate with MariaDB for catalogs",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "autoload": {
        "psr-4": {
            "Mariadb\\CatalogsPHP\\": "src/",
            "Mariadb\\CatalogsPHP\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.*",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "phpcbf": "@php vendor/bin/phpcbf",
        "phpcs": "@php vendor/bin/phpcs"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "8.0"
        }
    }
}
